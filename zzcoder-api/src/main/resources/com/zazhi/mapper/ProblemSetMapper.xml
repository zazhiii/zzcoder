<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zazhi.mapper.ProblemSetMapper">

    <update id="updateProblemSet" parameterType="com.zazhi.common.pojo.entity.ProblemSet">
        update problem_set
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateUser != null">
                update_user = #{updateUser},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="pagePublicProblemSet" parameterType="string" resultType="com.zazhi.common.pojo.vo.ProblemSetPageVO">
        select
        ps.id,
        ps.title,
        u.id as create_user_id,
        u.username as create_user_name
        from problem_set ps left join user u on ps.create_user = u.id
        <where>
            ps.status = 1
            <if test="title != null and title.trim() != ''">
                and ps.title like concat('%', #{title}, '%')
            </if>
        </where>
    </select>

    <resultMap id="getProblemSetMap" type="com.zazhi.common.pojo.vo.ProblemSetVO">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <collection property="problems" ofType="com.zazhi.common.pojo.vo.ProblemPageVO">
            <id column="pid" property="id"/>
            <result column="problem_id" property="problemId"/>
            <result column="problem_title" property="title"/>
            <result column="difficulty" property="difficulty"/>
            <collection property="tags" ofType="com.zazhi.common.pojo.entity.ProblemTag">
                <id column="tid" property="id"/>
                <result column="tag_name" property="name"/>
            </collection>
        </collection>
    </resultMap>
    <select id="getProblemSet" parameterType="java.lang.Integer" resultType="com.zazhi.common.pojo.vo.ProblemSetVO" resultMap="getProblemSetMap">
        SELECT
            ps.id id,
            ps.title title,
            ps.description description,
            ps.create_user create_user,
            ps.create_time create_time,
            p.id pid,
            p.problem_id problem_id,
            p.title problem_title,
            p.difficulty difficulty,
            t.id tid,
            t.name tag_name
        FROM
            problem_set ps
        LEFT JOIN problem_problem_set pps ON ps.id = pps.problem_set_id
        LEFT JOIN problem p ON pps.problem_id = p.id
        LEFT JOIN problem_tag pt ON p.id = pt.pid
        LEFT JOIN tag t ON pt.tid = t.id
        WHERE ps.id = #{id}
    </select>
</mapper>
